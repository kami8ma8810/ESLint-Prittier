{
	"env": {
		"browser": true, //ブラウザでメジャーなもの（documentなど）を許可
		"jquery": true //jqueryの$などを許可
	},
	"extends": [
		"eslint:recommended", //大まかなルールの読み込み
		"prettier" //Prettier適用
	],
	"globals": {},
	"parserOptions": {
		//ES2015に対応
		"ecmaVersion": 2015
	},
	//個別ルール
	"rules": {
		"semi": [
			"error",
			"always"
		]
	}
}